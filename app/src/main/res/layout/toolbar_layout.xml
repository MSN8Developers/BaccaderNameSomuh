<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/topLinearLayoutId">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarId"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pink300"
            app:title="toolbar" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="1.6dp"
            app:tabSelectedTextColor="@color/pink300">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/girlsNameTapId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/pink300"
                    android:text="girlsName" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/boysNameTapId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="girlsName" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </androidx.viewpager.widget.ViewPager>

</LinearLayout>